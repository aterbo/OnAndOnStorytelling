<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/conversation_profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:text=""
        android:textAllCaps="true"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@drawable/alberticon"
        />

    <TextView
        android:id="@+id/conversation_next_turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/conversation_profile_image"
        android:layout_alignParentTop="true"
        android:text="Next Turn"
        />

    <TextView
        android:id="@+id/conversation_participants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/conversation_profile_image"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_above="@+id/conversation_time_since_action"
        android:text="Participants"
        />

    <TextView
        android:id="@+id/conversation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/conversation_profile_image"
        android:layout_toLeftOf="@+id/conversation_story_duration"
        android:layout_below="@id/conversation_next_turn"
        android:text="Title"
        />

    <TextView
        android:id="@id/conversation_story_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/conversation_next_turn"
        android:text="Story Duration"
        />
    
    <TextView
        android:id="@id/conversation_time_since_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/conversation_profile_image"
        android:layout_alignParentBottom="true"
        android:text="Time Since"
        />
</RelativeLayout>