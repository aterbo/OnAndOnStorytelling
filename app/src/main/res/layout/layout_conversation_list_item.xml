<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="100dp"
    android:id="@+id/item_layout"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/conversation_profile_image"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:src="@drawable/status_none_144_70"
        android:background="@drawable/rounded_rectangle_border_gray_tint"
        />

    <TextView
        android:id="@+id/conversation_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_toRightOf="@id/conversation_profile_image"
        android:layout_toLeftOf="@+id/pop_up_button"
        android:layout_alignParentTop="true"
        android:text="Title"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/conversation_participants"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/conversation_profile_image"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_above="@+id/conversation_time_since_action"
        android:text="Participants"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@id/conversation_time_since_action"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/conversation_profile_image"
        android:layout_alignParentBottom="true"
        android:text="Time Since"
        android:textColor="@android:color/white"
        />

    <ImageButton
        android:id="@id/pop_up_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_more_vert_white_24dp"
        android:background="?android:selectableItemBackground" />
</RelativeLayout>