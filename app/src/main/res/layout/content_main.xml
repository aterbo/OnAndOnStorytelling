<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/stories_to_tell_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Stories to tell"
        android:onClick="startNextActivity" />

    <ListView
        android:id="@+id/stories_to_tell_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stories_to_tell_header" />

    <TextView
        android:id="@+id/stories_to_hear_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stories_to_tell_list"
        android:layout_marginTop="45dp"
        android:text="Stories to hear" />

    <ListView
        android:id="@+id/stories_to_hear_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stories_to_hear_header" />

    <TextView
        android:id="@+id/stories_to_wait_for_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stories_to_hear_list"
        android:layout_marginTop="45dp"
        android:text="Stories to wait for" />

    <ListView
        android:id="@+id/stories_to_wait_for_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/stories_to_wait_for_header" />

</RelativeLayout>
