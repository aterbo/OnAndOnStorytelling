<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/response_sender_profile_image"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:src="@drawable/alberticon"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/response_from_to"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Bob to you"
            />

        <TextView
            android:id="@+id/response_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Date"
            />

        <TextView
            android:id="@+id/response_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your favorite color..."
            />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fillViewport="true">

            <TextView
                android:id="@+id/response"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Here are my thoughts..."
                />
        </ScrollView>
    </LinearLayout>
</LinearLayout>