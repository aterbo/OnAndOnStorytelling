<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="@color/dialogBackground">

    <LinearLayout
        android:id="@+id/conversation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/response_sender_profile_image"
            android:layout_width="@dimen/profile_pic_diameter_in_dialog"
            android:layout_height="@dimen/profile_pic_diameter_in_dialog"
            android:padding="@dimen/profile_pic_padding_in_convo"
            android:background="@drawable/circle_profile_photo_background"
            android:layout_gravity="center"
            android:src="@drawable/word_treatment_512_84"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/response_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your favorite color..."
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textStyle="normal"
            android:textSize="@dimen/material_text_subhead"
            android:textColor="@android:color/white"
            />

        <TextView
            android:id="@+id/response_from_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="Albert"
            android:textAlignment="center"
            android:textSize="@dimen/material_text_body1"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/response_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/username_and_prompt_gap"
            android:gravity="bottom"
            android:text="Date."
            android:textAlignment="center"
            android:textSize="@dimen/material_text_caption"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/conversation_bar"
        android:scrollbars="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

             <TextView
                android:id="@+id/response"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:layout_margin="@dimen/material_text_body1"
                android:text="Here are my thoughts..."
                 android:textColor="@android:color/white"
                />

            <LinearLayout
                android:id="@+id/button_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/save_response"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:theme="@style/PrimaryButton"/>

                <Button
                    android:id="@+id/delete_response"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:theme="@style/PrimaryButton"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>