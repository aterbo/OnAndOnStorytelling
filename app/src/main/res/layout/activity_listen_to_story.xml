<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.onanon.app.activities.ListenToStoryActivity"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/conversation_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" >

        <ImageView
            android:id="@+id/conversation_icon"
            android:layout_width="@dimen/profile_pic_in_convos"
            android:layout_height="@dimen/profile_pic_in_convos"
            android:layout_marginRight="10dp"
            android:src="@drawable/word_treatment_512_84"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/sender_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/conversation_icon"
            android:layout_alignTop="@id/conversation_icon"
            android:text="Albert answered"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/prompt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sender_user_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/conversation_icon"
            android:text="Do you have a life plan?"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/control_panel"
        android:layout_below="@id/conversation_details">

        <com.onanon.app.classes.VisualizerView
            android:id="@+id/visualizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/story_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_alignParentBottom="true">

        <com.onanon.app.classes.SquareButton
            android:id="@+id/media_long_rew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="longRewind"
            android:background="@drawable/selector_rewind_long_button" />

        <com.onanon.app.classes.SquareButton
            android:id="@+id/media_short_rew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/gap_between_playback_buttons"
            android:onClick="shortRewind"
            android:background="@drawable/selector_rewind_button" />

        <com.onanon.app.classes.SquareToggleButton
            android:id="@+id/media_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:layout_marginLeft="@dimen/gap_between_playback_buttons"
            android:layout_marginRight="@dimen/gap_between_playback_buttons"
            android:background="@drawable/selector_recording_playback"
            android:textOff=""
            android:textOn="" />

        <com.onanon.app.classes.SquareButton
            android:id="@+id/media_short_ff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/gap_between_playback_buttons"
            android:onClick="shortForward"
            android:background="@drawable/selector_ff_button" />

        <com.onanon.app.classes.SquareButton
            android:id="@+id/media_long_ff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="longForward"
            android:background="@drawable/selector_ff_long_button" />
    </LinearLayout>

</RelativeLayout>
