<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.onanon.app.activities.ListenToStoryActivity">


    <RelativeLayout
        android:id="@+id/conversation_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/sender_profile_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/alberticon" />

        <TextView
            android:id="@+id/sender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/sender_profile_pic"
            android:layout_alignTop="@id/sender_profile_pic"
            android:text="Albert answered"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/prompt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sender_text"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/sender_profile_pic"
            android:text="Do you have a life plan?"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/control_panel"
        android:layout_below="@id/conversation_details">

        <com.onanon.app.classes.VisualizerView
            android:id="@+id/visualizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/story_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/media_long_rew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginRight="2dp"
            android:onClick="longRewind"
            android:src="@android:drawable/ic_media_previous" />

        <ImageButton
            android:id="@+id/media_short_rew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="shortRewind"
            android:src="@android:drawable/ic_media_rew" />

        <ToggleButton
            android:id="@+id/media_play"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/recording_playback_selector"
            android:textOff=""
            android:textOn="" />

        <ImageButton
            android:id="@+id/media_short_ff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="shortForward"
            android:src="@android:drawable/ic_media_ff" />

        <ImageButton
            android:id="@+id/media_long_ff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginLeft="2dp"
            android:onClick="longForward"
            android:src="@android:drawable/ic_media_next" />
    </LinearLayout>

</RelativeLayout>
