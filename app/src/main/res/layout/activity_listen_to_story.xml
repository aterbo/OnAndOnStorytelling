<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.onanon.app.activities.ListenToStoryActivity"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="6">

    <RelativeLayout
        android:id="@+id/conversation_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/conversation_icon"
            android:layout_width="@dimen/profile_pic_diameter_in_convo"
            android:layout_height="@dimen/profile_pic_diameter_in_convo"
            android:padding="@dimen/profile_pic_padding_in_convo"
            android:background="@drawable/circle_profile_photo_background"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/word_treatment_144_24"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/sender_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="Albert answered"
            android:textAlignment="center"
            android:textSize="@dimen/material_text_subhead"
            android:textColor="@android:color/white"
            android:layout_above="@+id/prompt_text"/>

        <TextView
            android:id="@id/prompt_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/username_and_prompt_gap"
            android:gravity="bottom"
            android:text="Tell me a story that ends in a joke."
            android:minLines="2"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/material_text_body1"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_weight="3">

        <com.onanon.app.classes.VisualizerView
            android:id="@+id/visualizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/story_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="7">

        <com.onanon.app.classes.SquareButton
            android:id="@+id/media_long_rew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="longRewind"
            android:background="@drawable/selector_rewind_long_button" />

        <com.onanon.app.classes.SquareButton
            android:id="@+id/media_short_rew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/gap_between_playback_buttons"
            android:onClick="shortRewind"
            android:background="@drawable/selector_rewind_button" />

        <com.onanon.app.classes.SquareToggleButton
            android:id="@+id/media_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:layout_marginLeft="@dimen/gap_between_playback_buttons"
            android:layout_marginRight="@dimen/gap_between_playback_buttons"
            android:background="@drawable/selector_main_play_button"
            android:textOff=""
            android:textOn="" />

        <com.onanon.app.classes.SquareButton
            android:id="@+id/media_short_ff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/gap_between_playback_buttons"
            android:onClick="shortForward"
            android:background="@drawable/selector_ff_button" />

        <com.onanon.app.classes.SquareButton
            android:id="@+id/media_long_ff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="longForward"
            android:background="@drawable/selector_ff_long_button" />
    </LinearLayout>

</LinearLayout>
