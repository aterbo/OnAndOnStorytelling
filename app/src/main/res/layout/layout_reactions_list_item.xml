<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <ImageView
        android:id="@+id/response_sender_profile_image"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:src="@drawable/alberticon"
        />

    <TextView
        android:id="@+id/response_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/response_sender_profile_image"
        android:layout_alignParentTop="true"
        android:text="What is your favorite color..."
        />

    <TextView
        android:id="@+id/response_from_to"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/response_sender_profile_image"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_above="@+id/response_date"
        android:text="Bob to you"
        />

    <TextView
        android:id="@id/response_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/response_sender_profile_image"
        android:layout_alignParentBottom="true"
        android:text="Date"
        />

</RelativeLayout>