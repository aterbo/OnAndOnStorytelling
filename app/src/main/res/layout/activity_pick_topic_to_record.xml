<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.onanon.app.activities.PickTopicToRecordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/conversation_icon"
            android:layout_width="@dimen/profile_pic_in_convos"
            android:layout_height="@dimen/profile_pic_in_convos"
            android:src="@drawable/word_treatment_512_84"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/sender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:text="Albert wants to hear one of the following"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/conversation_icon">

        <Button
            android:id="@+id/record_topic_option_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/conversation_icon"
            android:text=""
            android:onClick="topic1"
            android:layout_weight="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center"
            android:text=" - OR - "
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/record_topic_option_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:onClick="topic2"
            android:layout_weight="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center"
            android:text=" - OR - "
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/record_topic_option_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:onClick="topic3"
            android:layout_weight="3" />

    </LinearLayout>
</LinearLayout>
