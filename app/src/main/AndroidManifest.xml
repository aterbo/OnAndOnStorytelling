<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aterbo.tellme" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.ConversationListActivity"
            android:label="OnAnOn"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.RecordStoryActivity"
            android:label="Tell a Story"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.PickTopicToRecordActivity"
            android:label="Tell a Story"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ListenToStoryActivity"
            android:label="Hear a Story"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ChooseTopicsToSendActivity"
            android:label="Prompt a Story"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.StartNewConversationActivity"
            android:label="Start a Conversation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.AddNewUserActivity"
            android:label="@string/title_activity_add_new_user"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".activities.OpeningScreen"
            android:label="@string/title_activity_opening_screen"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
