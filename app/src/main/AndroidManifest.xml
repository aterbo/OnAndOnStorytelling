<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.onanon.app" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.onanon.app.activities.ConversationListActivity"
            android:label="OnAnOn"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.onanon.app.activities.RecordStoryActivity"
            android:label="Tell a Story"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.onanon.app.activities.PickTopicToRecordActivity"
            android:label="Tell a Story"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.onanon.app.activities.ListenToStoryActivity"
            android:label="Hear a Story"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.onanon.app.activities.ChooseTopicsToSendActivity"
            android:label="Prompt a Story"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.onanon.app.activities.StartNewConversationActivity"
            android:label="Start a Conversation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.onanon.app.activities.AddNewUserActivity"
            android:label="@string/title_activity_add_new_user"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.onanon.app.activities.OpeningScreen"
            android:label="ONanON"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
